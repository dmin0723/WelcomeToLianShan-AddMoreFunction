<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e0e0e0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            style="@style/MyImageView"
            android:src="@drawable/map"/>

        <TextView
            style="@style/MyTitleSize"
            android:text="@string/all_introduce_name"
            />

        <TextView
            style="@style/MyTextSize"
            android:text="@string/all_introduce_name_one"/>

        <TextView
            style="@style/MyTextSize"
            android:text="@string/all_introduce_name_two"/>

        <TextView
            style="@style/MyTextSize"
            android:text="@string/all_introduce_name_three"/>

    </LinearLayout>

</ScrollView>
