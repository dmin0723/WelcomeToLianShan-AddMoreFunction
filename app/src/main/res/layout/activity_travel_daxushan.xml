<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#d0f8ce">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/MyTitleSize"
            android:text="@string/daxushan"
            />

        <TextView
            style="@style/MyTextSize"
            android:text="@string/daxushan_introduce"
            />

        <ImageView
            style="@style/MyImageView"
            android:src="@drawable/dxs1"/>

        <ImageView
            style="@style/MyImageView"
            android:src="@drawable/dxs4"/>

        <ImageView
            style="@style/MyImageView"
            android:src="@drawable/dxs3"/>

    </LinearLayout>
</ScrollView>
